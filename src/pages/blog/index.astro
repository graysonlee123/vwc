---
import Layout from '@layouts/Layout.astro';

import BlogPosts from '@components/BlogPosts.astro';
import Header from '@components/Header.astro';
import Hero from '@components/Hero.astro';

import HeroImageDesktop from '@assets/images/batuu-2x1.jpg';
import HeroImageMobile from '@assets/images/batuu-3x4.jpg';
import HeroImageTablet from '@assets/images/batuu-4x3.jpg';
---

<Layout
  seoProps={{
    title: 'Blog | Vacations with Character',
    description: '', // TODO
    image: 'og-careers.jpg', // TODO
  }}
>
  <Hero
    mobileImage={HeroImageMobile}
    tabletImage={HeroImageTablet}
    desktopImage={HeroImageDesktop}
    blurred
  >
    <Header as="h1" family="brush" size="2xl" slot="header"> Blog </Header>
    <p slot="subheader">
      Dive into our collection of blog posts and discover your next adventure!
      We've got tips to answer your questions and inspire your journey.
    </p>
  </Hero>
  <BlogPosts />
</Layout>
