---
import { Image } from 'astro:assets';
import { EMAIL, QUOTE_URL } from '@lib/constants';

import Layout from '@layouts/Layout.astro';

import Container from '@components/Container.astro';
import ContactForm from '@components/ContactForm.astro';
import Header from '@components/Header.astro';
import ContactBlip from '@components/ContactBlip.astro';
import Hero from '@components/Hero.astro';
import HeroActions from '@components/HeroActions.astro';

import heroImage from '@assets/images/beachAerial.jpg';
import ContactImage from '@assets/images/disneyCharacters-4x3.jpg'

import Link from '@components/Link.astro';
import Button from '@components/Button.astro';
---

<Layout
  title="Contact | Vacations with Character"
  description="This page is under construction. Visit again soon!"
  floatingMobileNavbar
>
  <Hero imageProps={{
    src: heroImage,
    alt: 'Aerial view of the ocean from a beachfront with palm trees',
    style: {
      objectPosition: '50% 10%',
    }
  }}>
    <Header
      as="h1"
      family="brush"
      size="2xl"
      slot="header"
    >
      Ready to begin?
    </Header>
    <p slot="subheader">
      If you know where you want to go, use our <Link href={QUOTE_URL} target="_blank" rel="noopener noreferrer">quote form!</Link> If you have a general question or want to have a conversaion, use the contact form below!
    </p>
    <HeroActions slot="actions">
      <Button
        as="a"
        href={QUOTE_URL}
        target="_blank"
        rel="noopener noreferrer"
      >
        Request a Quote
      </Button>
    </HeroActions>
  </Hero>
  <section class="section">
    <Container size="md" breakpoint="md">
      <div class="layout">
        <div class="card main">
          <Header
            as="h2"
            family="body"
            size="xl"
            color="navy"
          >
            Contact
          </Header>
          <p class="description">Reach out to us&mdash;we'd love to help!</p>
          <ContactForm/>
        </div>
        <div class="right">
          <div class="media">
            <Image
              class="image"
              src={ContactImage}
              alt="Disney characters standing in front of the Magic Kingdom castle"
              sizes="(min-width: 1280px) 516px, (min-width: 992px) calc((85vw - 3rem - 4px) / 2), calc(85vw - 4px)"
              widths={[516 * 2, 516]}
              loading="eager"
            />
          </div>
          <div class="blips">
            <ContactBlip
              icon="email"
              linkProps={{
              href: `mailto:${EMAIL}`,
              target: '_blank',
              rel: 'noopener noreferrer',
              }}
            >
              {EMAIL}
            </ContactBlip>
            <ContactBlip
              icon="phone"
              linkProps={{
                href: 'tel:8009083005',
                target: '_blank',
                rel: 'noopener noreferrer',
              }}
            >
              (800) 908-3005
            </ContactBlip>
          </div>
        </div>
      </div>
    </Container>
  </section>
</Layout>

<style>
  .section {
    margin-block: 7rem;
  }

  .layout {
    display: grid;
    gap: 3rem;
    align-items: start;
  }

  .card,
  .blips {
    padding-inline: 1.5rem;
  }

  .blips {
    display: grid;
    gap: 1.5rem;
  }

  .description {
    margin-top: 0.5rem;
    margin-bottom: 3rem;
    text-wrap: balance;
  }

  .image {
    height: auto;
    background-color: hsl(var(--color--gray--100));
    border-radius: 1.5rem;
    border-width: 2px;
    border-style: solid;
    border-color: hsl(var(--color--gray--100));
  }

  .right {
    display: grid;
    gap: inherit;
  }

  @media (width < 48rem) {
    .media,
    .media img {
      display: none;
    }
  }

  @media (width >= 48rem) {
    .card,
    .blips {
      padding: 3rem;
      border-radius: 1.5rem;
      background-color: hsl(var(--color--white));
      drop-shadow: 0 0 1rem hsl(var(--color--black) / 10%);
      border-width: 2px;
      border-style: solid;
      border-color: hsl(var(--color--gray--100));
    }
  }

  @media (width >= 62rem) {
    .layout {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>