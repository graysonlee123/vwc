---
import Layout from '@layouts/Layout.astro';

import CTA from '@components/CTA.astro';
import { default as AboutComponent } from '@components/About.astro';
import Header from '@components/Header.astro';
import Hero from '@components/Hero.astro';

import HeroImageDesktop from '@assets/images/childrenEatingIceCream-2x1.jpg';
import HeroImageTablet from '@assets/images/childrenEatingIceCream-4x3.jpg'
import HeroImageMobile from '@assets/images/childrenEatingIceCream-3x4.jpg'
---

<Layout
  title="About | Vacations with Character"
  description="This page is under construction. Visit again soon!"
  floatingMobileNavbar
>
  <Hero
    mobileImage={HeroImageMobile}
    tabletImage={HeroImageTablet}
    desktopImage={HeroImageDesktop}
    blurred
  >
    <Header
      as="h1"
      family="brush"
      size="2xl"
      slot="header"
    >
      About Us
    </Header>
  </Hero>
  <AboutComponent/>
  <CTA/>
</Layout>
