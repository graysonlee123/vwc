---
import { Image } from 'astro:assets';

import Badges from './Badges.astro';
import Container from './Container.astro';
import SocialIconList from './SocialIconList.astro';

import heroImage from '../assets/images/beachAerial.jpg';
---

<Container>
  <div class="hero">
    <div class="texts">
      <h1 class="brush-font header">Where the Fun Begins!</h1>
      <p class="subheader">
        A family-owned full-service travel agency located in and licensed by the
        state of Florida.
      </p>
    </div>
    <div class="footer">
      <Badges />
      <SocialIconList />
    </div>
    <Image
      class="image"
      src={heroImage}
      alt="Aerial view of a tropical beach with people enjoying the sand and the water."
    />
  </div>
</Container>

<style>
  .hero {
    position: relative;
    z-index: 0;
    padding-top: 5rem;
    padding-bottom: 2rem;
    color: #fff;
    text-align: center;
    border-radius: 2rem;
    overflow: hidden;
  }

  .hero::after {
    content: '';
    position: absolute;
    z-index: -1;
    inset: 0;
    background-image: linear-gradient(
      to top,
      rgb(0, 0, 0, 0.5) 15%,
      rgb(0, 0, 0, 0.15) 30%,
      rgb(0, 0, 0, 0) 50%,
      rgb(0, 0, 0, 0.2) 75%,
      rgb(0, 0, 0, 0) 100%
    );
  }

  .texts {
    padding-inline: 0.75rem;
  }

  .header {
    font-size: var(--font-size--2xl);
  }

  .subheader {
    max-width: 40ch;
    margin-top: 1.5rem;
    margin-inline: auto;
    font-weight: bold;
    font-size: var(--font-size--lg);
  }

  .footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    margin-top: 12rem;
    padding-inline: 1.5rem;
    padding-bottom: 2rem;
    background-color: hsl(var(--color--white) / 40%);
    backdrop-filter: blur(4px);
    border-radius: 2rem 2rem 0 0;
  }

  .image {
    position: absolute;
    z-index: -2;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 15%;
  }
</style>
