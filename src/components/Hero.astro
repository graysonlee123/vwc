---
import { Image } from 'astro:assets';

import Badges from './Badges.astro';
import Container from './Container.astro';

import heroImage from '../assets/images/beachAerial.jpg';
---

<Container>
  <div class="hero">
    <div class="texts">
      <h1 class="header">Where the Fun Begins!</h1>
      <p class="subheader">
        A family-owned full-service travel agency located<br /> in and licensed by
        the state of Florida.
      </p>
      <div class="badges">
        <Badges />
      </div>
    </div>
    <!-- TODO: This alt tag -->
    <Image class="image" src={heroImage} alt="" />
  </div>
</Container>

<style>
  .hero {
    position: relative;
    z-index: 0;
    padding-top: 5rem;
    padding-bottom: 18rem;
    color: #fff;
    text-align: center;
    border-radius: 2rem;
    overflow: hidden;
  }

  .hero::after {
    content: '';
    position: absolute;
    z-index: -1;
    inset: 0;
    background-image: linear-gradient(
      to top,
      rgb(0, 0, 0, 0) 50%,
      rgb(0, 0, 0, 0.2) 75%,
      rgb(0, 0, 0, 0) 100%
    );
  }

  .header {
    font-size: 3rem;
    text-transform: uppercase;
    font-weight: 900;
    letter-spacing: -0.5px;
    font-family: serif;
  }

  .subheader {
    font-weight: bold;
    line-height: 1.2;
  }

  .badges {
    margin-top: 3rem;
  }

  .image {
    position: absolute;
    z-index: -2;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 15%;
  }
</style>
