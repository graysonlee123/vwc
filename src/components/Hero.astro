---
import { Image } from 'astro:assets';

import Badges from '@components/Badges.astro';
import Container from '@components/Container.astro';

import heroImage from '@assets/images/beachAerial.jpg';
---

<div class="hero">
  <Container>
    <div class="layout">
      <div class="texts">
        <h1 class="brush-font header">Where the Fun Begins!</h1>
        <p class="subheader">
          A family-owned, full-service travel agency located in and licensed by
          the state of Florida.
        </p>
      </div>
      <div class="footer">
        <Badges />
      </div>
      <Image
        class="image"
        src={heroImage}
        sizes="(min-width: 1530px) 1300px, 85vw"
        widths={[2600, 1300, 996, 768, 480]}
        quality="high"
        loading="eager"
        alt="Aerial view of a tropical beach with people enjoying the sand and the water."
      />
    </div>
  </Container>
  <div class="back" aria-hidden="true">
    <span class="shadow" aria-hidden="true"></span>
    <span class="shadow" aria-hidden="true"></span>
  </div>
</div>

<style>
  .hero {
    position: relative;
    z-index: 0;
  }

  .back {
    position: absolute;
    z-index: -5;
    inset: 0;
  }

  .shadow {
    position: absolute;
    display: block;
  }

  .shadow:nth-child(1) {
    z-index: -5;
    top: -20%;
    right: 10%;
    aspect-ratio: 1;
    width: 900px;
    background-color: #c89e86;
    filter: blur(999px) saturate(150%);
    opacity: 17%;
  }

  .shadow:nth-child(2) {
    z-index: -10;
    top: -10%;
    left: 10%;
    aspect-ratio: 1;
    width: 800px;
    background-color: #008a8b;
    filter: blur(9999px) saturate(150%);
    opacity: 17%;
  }

  .layout {
    position: relative;
    z-index: 0;
    padding-top: 5rem;
    padding-bottom: 2rem;
    color: #fff;
    text-align: center;
    border-radius: 2rem;
    overflow: hidden;
  }

  .layout::after {
    content: '';
    position: absolute;
    z-index: -1;
    inset: 0;
    background-image: linear-gradient(
      to top,
      rgb(0, 0, 0, 0.5) 15%,
      rgb(0, 0, 0, 0.15) 30%,
      rgb(0, 0, 0, 0) 50%,
      rgb(0, 0, 0, 0.2) 75%,
      rgb(0, 0, 0, 0) 100%
    );
  }

  .texts {
    padding-inline: 0.75rem;
  }

  .header {
    font-size: var(--font-size--2xl);
  }

  .subheader {
    max-width: 40ch;
    margin-top: 1.5rem;
    margin-inline: auto;
    font-weight: bold;
    font-size: var(--font-size--lg);
  }

  .footer {
    display: inline-flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    padding-block: 0.25rem;
    margin-top: 12rem;
    margin-inline: auto;
    padding-inline: 1.5rem;
    padding-bottom: 2rem;
    background-color: hsl(var(--color--white) / 50%);
    backdrop-filter: blur(4px);
    border-radius: 2rem 2rem 0 0;
  }

  .image {
    position: absolute;
    z-index: -2;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 15%;
  }
</style>
