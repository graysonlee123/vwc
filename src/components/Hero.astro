---
import { Image } from 'astro:assets';

import Container from '@components/Container.astro';
import Header from '@components/Header.astro';

import heroImage from '@assets/images/disneyCruiseShipOffShore.jpg';
import type { LocalImageProps } from 'astro:assets';

type Props = {
  imageProps?: LocalImageProps
}

const { imageProps = {} } = Astro.props
---

<section class="section">
  <Container breakpoint='sm'>
    <div class="layout">
      <div class="texts">
        <slot name="header">
          <Header
            as="h1"
            family="brush"
            size="2xl"
          >
            Where the Fun Begins!
          </Header>
        </slot>
        <div class="subheader">
          <slot name="subheader">
            <p>
              A family-owned, full-service travel agency located in and licensed by
              the state of Florida.
            </p>
          </slot>
        </div>
        <slot name="actions"/>
      </div>
      <slot name="footer"/>
      <Image
        class="image"
        src={heroImage}
        alt="A Disney Cruise Ship docked off of the shore of a tropical island."
        sizes="(min-width: 1530px) 1300px, (min-width: 576px) 85vw, 100vw"
        widths={[2600, 1300, 996, 768, 480]}
        quality="high"
        loading="eager"
        {...imageProps}
      />
    </div>
    <div class="back" aria-hidden="true">
      <span class="shadow" aria-hidden="true"></span>
      <span class="shadow" aria-hidden="true"></span>
      <span class="shadow" aria-hidden="true"></span>
    </div>
  </Container>
</section>

<style>
  .container {
    position: relative;
    z-index: 0;
  }

  .layout {
    position: relative;
    z-index: 0;
    padding-top: 8rem;
    padding-inline: 1.5rem;
    padding-bottom: 1.5rem;
    color: hsl(var(--color--white));
    text-align: center;
    overflow: hidden;
    border-radius: 2rem;
  }

  .layout::after {
    content: '';
    position: absolute;
    z-index: -1;
    inset: 0;
    background-image: linear-gradient(
      to top,
      rgb(0, 0, 0, 0.25) 10%,
      rgb(0, 0, 0, 0.075) 25%,
      rgb(0, 0, 0, 0.00) 40%,
      rgb(0, 0, 0, 0.15) 75%
    );
  }

  .texts {
    margin-bottom: 3rem;
  }

  .subheader {
    max-width: 40ch;
    margin-top: 1.5rem;
    margin-inline: auto;
    font-weight: bold;
    font-size: var(--font-size--lg);
    text-wrap: pretty;
  }

  .image {
    position: absolute;
    z-index: -2;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 20% 50%;
  }

  .back {
    position: absolute;
    z-index: -5;
    inset: 0;
  }

  .shadow {
    position: absolute;
    display: block;
  }

  .shadow:nth-child(1) {
    top: 15%;
    right: 5%;
    box-shadow: 0px 0px 750px 100px #50a3d5;
    opacity: 60%;
  }

  .shadow:nth-child(2) {
    top: 20%;
    left: 5%;
    box-shadow: 0px 0px 500px 100px #01586b;
    opacity: 60%;
  }

  .shadow:nth-child(3) {
    bottom: 25%;
    right: 10%;
    box-shadow: 0px 0px 500px 100px #65a138;
    opacity: 60%;
  }

  @media (width < 36rem) {
    .section {
      padding: 0.75rem;
    }
  }

  @media (width >= 36rem) {
    .layout {
      padding-top: 4rem;
    }

    .image {
      object-position: 30% 55%;
    }
  }

  @media (width >= 62rem) {
    .image {
      object-position: 50% 55%;
    }
  }
</style>
