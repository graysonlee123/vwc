---
import { getImage } from 'astro:assets';
import type { ImageMetadata } from 'astro';

import Container from '@components/Container.astro';
import Header from '@components/Header.astro';
import Section from '@components/Section.astro';

type Props = {
  mobileImage: ImageMetadata
  tabletImage: ImageMetadata
  desktopImage: ImageMetadata
}

const { mobileImage, tabletImage, desktopImage } = Astro.props

const optimizedHeroImageMobile = await getImage({src: mobileImage, quality: 'high', widths: [320, 375, 430, 640, 750, 860]})
const optimizedHeroImageTablet = await getImage({src: tabletImage, quality: 'high', widths: [768, 1024, 1536, 2048]})
const optimizedHeroImageDesktop = await getImage({src: desktopImage, quality: 'high', widths: [1300, 2600]})
---

<Section>
  <div class="wrapper">
    <Container breakpoint='sm'>
      <div class="card">
        <div class="layout">
          <div class="texts">
            <slot name="header">
              <Header
                as="h1"
                family="brush"
                size="2xl"
              >
                Where the Fun Begins!
              </Header>
            </slot>
            <div class="subheader">
              <slot name="subheader">
                <p>
                  A family-owned, full-service travel agency located in and licensed by
                  the state of Florida.
                </p>
              </slot>
            </div>
            <slot name="actions"/>
          </div>
          <slot name="footer"/>
        </div>
        <picture>
          <source
            srcset={optimizedHeroImageMobile.srcSet.attribute}
            media="(max-width: 767px)"
            type="image/webp"
          >
          <source
            srcset={optimizedHeroImageTablet.srcSet.attribute}
            media="(min-width: 768px) and (max-width: 1200px)"
            type="image/webp"
          >
          <img
            class="image"
            width={optimizedHeroImageDesktop.attributes.width}
            height={optimizedHeroImageDesktop.attributes.height}
            src={optimizedHeroImageDesktop.src}
            srcset={optimizedHeroImageDesktop.srcSet.attribute}
            alt="A Disney Cruise Ship docked off of the shore of a tropical island."
            sizes="(min-width: 1530px) 1300px, (min-width: 576px) 85vw, calc(100vw - 1.5rem)"
            loading="eager"
          />
        </picture>
      </div>
      <div class="back" aria-hidden="true">
        <span class="shadow" aria-hidden="true"></span>
        <span class="shadow" aria-hidden="true"></span>
        <span class="shadow" aria-hidden="true"></span>
      </div>
    </Container>
  </div>
</Section>

<style>
  .container {
    position: relative;
    z-index: 0;
  }

  .card {
    color: hsl(var(--color--white));
    text-align: center;
    border-radius: 2rem;
    overflow: hidden;
  }

  .layout {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    width: 100%;
    height: 100%;
    padding-top: 8rem;
    padding-inline: 1.5rem;
    padding-bottom: 3rem;
  }

  .card::after {
    content: '';
    position: absolute;
    z-index: 1;
    inset: 0;
    background-image: linear-gradient(
      to top,
      rgb(0, 0, 0, 0.25) 10%,
      rgb(0, 0, 0, 0.075) 25%,
      rgb(0, 0, 0, 0.00) 40%,
      rgb(0, 0, 0, 0.15) 75%
    );
    border-radius: inherit;
  }

  .texts {
    position: relative;
    z-index: 2;
  }

  .subheader {
    max-width: 40ch;
    margin-top: 1.5rem;
    margin-inline: auto;
    font-weight: bold;
    font-size: var(--font-size--lg);
    text-wrap: pretty;
  }

  .image {
    width: 100%;
    height: auto;
    aspect-ratio: 3 / 4;
  }

  .back {
    position: absolute;
    z-index: -5;
    inset: 0;
  }

  .shadow {
    position: absolute;
    display: block;
  }

  .shadow:nth-child(1) {
    top: 15%;
    right: 5%;
    box-shadow: 0px 0px 750px 100px #50a3d5;
    opacity: 60%;
  }

  .shadow:nth-child(2) {
    top: 20%;
    left: 5%;
    box-shadow: 0px 0px 500px 100px #01586b;
    opacity: 60%;
  }

  .shadow:nth-child(3) {
    bottom: 25%;
    right: 10%;
    box-shadow: 0px 0px 500px 100px #65a138;
    opacity: 60%;
  }

  @media (width < 36rem) {
    .wrapper {
      margin: 0.75rem;
    }
  }

  @media (width >= 36rem) {
    .layout {
      padding-block: 4rem;
    }
  }

  @media (width >= 48rem) {
    .image {
      aspect-ratio: 4 / 3;
    }
  }

  @media (width >= 75rem) {
    .image {
      aspect-ratio: 2 / 1;
    }
  }
</style>
