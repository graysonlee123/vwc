---
import Button from './Button.astro';
import Container from './Container.astro';
import Link from './Link.astro';
import Logomark from './Logomark.astro';
import SocialIconList from './SocialIconList.astro';
---

<nav class="nav">
  <Container>
    <div class="layout">
      <Logomark />
      <ul class="items">
        <li class="item">
          <Link href="/"> Home </Link>
        </li>
        <li class="item">
          <Link href="/about/"> About </Link>
        </li>
        <li class="item">
          <Link href="/destinations/"> Destinations </Link>
        </li>
        <li class="item">
          <Link href="/contact/"> Contact </Link>
        </li>
      </ul>
      <div class="right">
        <SocialIconList />
        <span class="divider" aria-hidden="true"></span>
        <Button href="/contact/">Contact</Button>
      </div>
    </div>
  </Container>
</nav>

<style>
  .nav {
    padding: 1.25rem 0.75rem;
  }

  .layout {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .items {
    display: flex;
    gap: 3rem;
    align-items: center;
    list-style: none;
  }

  .right {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-left: auto;
  }

  .divider {
    display: block;
    width: 2px;
    height: 2rem;
    background-color: hsl(var(--color--gray--100));
  }

  @media (width < 48rem) {
    .items {
      display: none;
    }
  }
</style>
